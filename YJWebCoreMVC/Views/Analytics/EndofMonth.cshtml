@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@model YJWebCoreMVC.Models.AnalyticsModel
@using System.Text.Json

<div id="content-center" class="row">

    <div class="web-form page login-page col-sm-12" id="FormForEndofMonth">

        <div class="form-horizontal">
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">
                        <label class="col-sm-4">
                            From Date
                        </label>
                        <div class="col-sm-8">
                            <input type="date" id="txtFromDate1" class="form-control fs-13 resetFromDate activateFormRefreshBtn" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <label class="col-sm-4">
                            To Date
                        </label>
                        <div class="col-sm-8">
                            <input type="date" id="txtToDate1" class="form-control fs-13 resetToDate activateFormRefreshBtn" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <input type="checkbox" id="cbFillFromToDates" checked /> <span>All Dates</span>
                            <input type="button" value="Last Month" class="formsGlobalUniqueBtn btnGetLastMonthDates" />
                            <input type="button" value="Last Week" class="formsGlobalUniqueBtn btnGetLastWeekDates" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 text-right">
                    <input type="radio" name="iSByPickupDate" class="iSByDate activateFormRefreshBtn" value="false" /> Date &nbsp;&nbsp;&nbsp;
                    <input type="radio" name="iSByPickupDate" class="iSByPickupDate resetDefaultCheckField activateFormRefreshBtn" value="true" checked /> Pickup Date
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <label class="col-sm-4">
                            Store No.
                        </label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(x => x.brand, Model.AllStores, new { @class = "form-control resetSelectField activateFormRefreshBtn", @id = "ddlStore" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 text-right">
                    <input type="button" value="Reset" form-id="FormForEndofMonth" class="formsGlobalUniqueBtn btnResetFormValues" />
                    <input type="button" id="btnFormResultsSearch" value="Refresh" class="refresh_btn refreshBtnDefault" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4" id="divUploadImage" style="display:none;">
                    <input id="fileupload" type="file" /><br /><br />
                    <input type="button" id="uploadButton" value="Upload" />
                </div>
            </div>
            <div id="divImages" style="text-align:right;display:none;" class="col-lg-2">
                <img id="image" src="" alt="" style="max-width: 133% !important;" />
            </div>
        </div>


    </div>

    <div class="mt-4 white-box pos-rel" id="divDataTableReport">

        <div class="row col-md-6 report_buttons">
            <div style="margin:3px;">
                <input type="button" value="PDF" table-id="dataTableForEndofMonth" class="formsGlobalUniqueBtn btnDataTableDownloadPDF" id="btnPDF" />
            </div>
            <div style="margin:3px;">
                <input type="button" value="Excel" table-id="dataTableForEndofMonth" class="formsGlobalUniqueBtn btnDataTableDownloadExcel" />
            </div>
            <div style="margin:3px;">
                <input type="button" value="Preview" table-id="dataTableForEndofMonth" id="btnDataTablePreview" class="formsGlobalUniqueBtn" />
            </div>
            <div style="margin:3px;">
                <input type="button" value="Print" table-id="dataTableForEndofMonth" id="btnDataTablePrint" class="formsGlobalUniqueBtn" />
            </div>
            <div style="margin:3px;display:none;">
                <input type="button" value="Email" table-id="dataTableForEndofMonth" class="formsGlobalUniqueBtn" />
            </div>

            <div style="margin:3px;display:none;">
                <input type="button" value="Simple Excel" class="formsGlobalUniqueBtn" />
            </div>
        </div>
        <div class="row dataTableReport">

            <table id="dataTableForEndofMonth" class="dataTable display nowrap table" style="width:100%">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th class="numericColumns">Amount</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>

            </table>
            <br>

        </div>
    </div>

</div>




<script type="text/javascript">

    var txtFromDate1 = "1990-01-01", txtToDate1 = "2099-12-31";

    function ClearControls() {
        txtFromDate1 = "1990-01-01"; txtToDate1 = "2099-12-31";
        $('#txtFromDate1').val('');
        $('#txtToDate1').val('');
        $('#ddlStore').val('All').change();

        existAutoFilledData();
    }
    function existAutoFilledData() {

        if ($('#txtFromDate1').val() != "")
            fromdate1 = $('#txtFromDate1').val();
        else
            fromdate1 = "1990-01-01";

        if ($('#txtToDate1').val() != "")
            todate1 = $('#txtToDate1').val();
        else
            todate1 = "2099-12-31";

        if ($('#ddlStore option:selected').val() != 'All')
            store = $('#ddlStore option:selected').val();
        else
            store = "";


        iSByPickupDate = "false";
        if ($(".iSByPickupDate:checked").length > 0) {
            iSByPickupDate = $(".iSByPickupDate:checked").val().toString();
        }


        BindEndofMonth(fromdate1, todate1, iSByPickupDate, store);
    }

    function BindEndofMonth(fromdate1, todate1, iSByPickupDate, store) {
        var url = '@Url.Action("GetEndofMonth", "Analytics", new { Area = "" })';
        var data = {
            strFrom1: fromdate1,
            strTo1: todate1,
            striSByPickupDate: iSByPickupDate,
            strstore: store
        };
        var jqxhr = $.post(url, data, function () { })
            .done(function (response) {
                var json;
                if (response instanceof Object)
                    json = response;
                else
                    json = $.parseJSON(response);

                var table = $('#dataTableForEndofMonth').DataTable();
                table.clear().draw();


                $("#dataTableForEndofMonth tbody").empty();
                var trans = json;
                var totalPrice = 0;
                var tr;
                //alert(json);
                for (var i = 0; i < json.length; i++) {
                    totalPrice += parseFloat(json[i].PRICE);

                    table.row.add([
                        json[i].name,
                        numberWithCommas(json[i].PRICE),
                    ]);
                    if (i == 2) {
                        table.row.add([' ', ' ']);
                    }
                }

                table.draw();
                addNumericColumnsClasstoDT("dataTableForEndofMonth", [1]);

                // TODO : Bind data to table
            })
            .fail(function (jqxhr, textStatus, error) {
                var err = textStatus + ", " + error;
                console.log("GETEndofMonth Request Failed: " + err);
            });
    }


    $(document).ready(function () {

        var table = $('#dataTableForEndofMonth').DataTable({
            dom: 'Blfrtip',
            searching: true,
            select: true,
            buttons: [],
            pageLength: 25,
            "aaSorting": []
        });

        $(document).on('click', ".paginate_button", function () {
            addNumericColumnsClasstoDT("dataTableForEndofMonth", [1]);
        });

        fillFromToDates();
    });

</script>


