<script type="text/javascript">

    function ClearControls() {
        getDefaultFormValuesASCform();
        existAutoFilledData();
    }
    function existAutoFilledData() {

        if ($('#txtFromDate1').val() != "")
            fromdate1 = $('#txtFromDate1').val();
        else
            fromdate1 = "1990-01-01";

        if ($('#txtToDate1').val() != "")
            todate1 = $('#txtToDate1').val();
        else
            todate1 = "2099-12-31";

        if ($('#txtFromDate2').val() != "")
            fromdate2 = $('#txtFromDate2').val();
        else
            fromdate2 = "1990-01-01";

        if ($('#txtToDate2').val() != "")
            todate2 = $('#txtToDate2').val();
        else
            todate2 = "2099-12-31";

        if ($('#txtFromDate3').val() != "")
            fromdate3 = $('#txtFromDate3').val();
        else
            fromdate3 = "1990-01-01";

        if ($('#txtToDate3').val() != "")
            todate3 = $('#txtToDate3').val();
        else
            todate3 = "2099-12-31";
        BindAnnualPaymentsReceived(fromdate1, todate1, fromdate2, todate2, fromdate3, todate3);
    }

    function BindAnnualPaymentsReceived(fromdate1, todate1, fromdate2, todate2, fromdate3, todate3) {
        var url = '@Url.Action("GetAnnualPaymentsReceived", "Analytics", new { Area = "" })';
        var data = {
            strFrom1: fromdate1,
            strTo1: todate1,
            strFrom2: fromdate2,
            strTo2: todate2,
            strFrom3: fromdate3,
            strTo3: todate3
        };
        var jqxhr = $.post(url, data, function () { })
        .done(function (response) {
            var json;
            if (response instanceof Object)
                json = response;
            else
                json = $.parseJSON(response);

            var table = $('#dataTableForAnnualPaymentsReceived').DataTable();
            table.clear().draw();


            $("#dataTableForAnnualPaymentsReceived tbody").empty();
            var trans = json;
            var totalPaid1 = 0; var totalPaid2 = 0, totalPaid3 = 0;
            var tr;
            //alert(json);
            for (var i = 0; i < json.length; i++) {
                totalPaid1 += parseFloat(json[i].paid1);
                totalPaid2 += parseFloat(json[i].paid2);
                totalPaid3 += parseFloat(json[i].paid3);

                table.row.add([
                    json[i].ACC,
                    json[i].name,
                    json[i].paid1,
                    json[i].increase1,
                    json[i].paid2,
                    json[i].increase2,
                    json[i].paid3,
                ]);
            }

            $('#tfooter').find('th').eq(0).html("Grand Total");
            $('#tfooter').find('th').eq(2).html(numberWithCommas(totalPaid1));
            $('#tfooter').find('th').eq(4).html(numberWithCommas(totalPaid2));
            $('#tfooter').find('th').eq(6).html(numberWithCommas(totalPaid3));

            table.draw();
            addNumericColumnsClasstoDT("dataTableForAnnualPaymentsReceived", [2, 3, 4, 5, 6]);

            // TODO : Bind data to table
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = textStatus + ", " + error;
            console.log("GETAnnualPaymentsReceived Request Failed: " + err);
        });
    }


    $(document).ready(function () {

        var table = $('#dataTableForAnnualPaymentsReceived').DataTable({
            dom: 'Blfrtip',
            searching: true,
            select: true,
            buttons: [],
            pageLength: 25
        });

        $(document).on('click', ".paginate_button", function () {
            addNumericColumnsClasstoDT("dataTableForAnnualPaymentsReceived", [2, 4, 6]);
        });

        //fillFromToDates();
        getDefaultFormValuesASCform();
    });

    function getDefaultFormValuesASCform() {
        var today = new Date();
        txtFromDate1 = today.getFullYear() + "-01-01";
        txtToDate1 = today.getFullYear() + "-" + ("00" + (today.getMonth() + 1)).slice(-2) + "-" + ("00" + today.getDate()).slice(-2);
        txtFromDate2 = (today.getFullYear() - 1) + "-01-01";
        txtToDate2 = (today.getFullYear() - 1) + "-" + ("00" + (today.getMonth() + 1)).slice(-2) + "-" + ("00" + today.getDate()).slice(-2);
        txtFromDate3 = (today.getFullYear() - 2) + "-01-01";
        txtToDate3 = (today.getFullYear() - 2) + "-" + ("00" + (today.getMonth() + 1)).slice(-2) + "-" + ("00" + today.getDate()).slice(-2);
        $('#txtFromDate1').val(txtFromDate1);
        $('#txtToDate1').val(txtToDate1);
        $('#txtFromDate2').val(txtFromDate2);
        $('#txtToDate2').val(txtToDate2);
        $('#txtFromDate3').val(txtFromDate3);
        $('#txtToDate3').val(txtToDate3);
        buttonStyleClassChange('btnFormResultsSearch');
    }

    $(document).on('click', '.btnResetFormValues', function () {
        getDefaultFormValuesASCform();
    })


</script>


