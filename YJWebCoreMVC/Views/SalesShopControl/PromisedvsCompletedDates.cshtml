    function BindBagsGivenToPerson(fromdate1, todate1, allDates) {

        var url = '@Url.Action("ListofPromisedvsCompletedDates", "SalesShopControl", new { Area = "" })';

        var data = {
            fdate: fromdate1,
            tdate: todate1,
            AllDates: allDates
        };

        var jqxhr = $.post(url, data, function () { })
        .done(function (response) {
            var json;
            if (response instanceof Object)
                json = response;

            else
                json = $.parseJSON(response);

            var table = $('#dataTableForCompletedJobs').DataTable();
            table.clear().draw();

            $("#dataTableForCompletedJobs tbody").empty();
            var trans = json;
            var totalPrice = 0;
            var tr;
            for (var i = 0; i < json.length; i++) {
                //totalPrice += parseFloat(json[i].PRICE);
                table.row.add([
                    json[i].repair_no,
                    json[i].acc,
                    safeDate(json[i].date),                  
                    safeDate(json[i].promised),
                    safeDate(json[i].completed)
                ]);
            }

            table.draw();
            //addNumericColumnsClasstoDT("dataTableForBagsGivenToPerson", [1]);

            // TODO : Bind data to table
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = textStatus + ", " + error;
            console.log("GetListofCompletedJobs Request Failed: " + err);
        });
