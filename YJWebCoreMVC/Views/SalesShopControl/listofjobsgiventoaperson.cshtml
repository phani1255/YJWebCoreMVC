@{
    ViewBag.Title = "List of Jobs Given to a Persson";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";

}
@model YJWebCoreMVC.Models.MfgModel

<h2 class="text-center mt-2">List Of Jobs Given To Person</h2>
<div id="content-center" class="row">

    <div class="web-form page login-page col-sm-12" id="FormForBagsGivenToPerson">

        <div class="form-horizontal">
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">
                        <label class="col-sm-4">
                            From Date
                        </label>
                        <div class="col-sm-8">
                            <input type="date" id="txtFromDate1" class="form-control fs-13 resetFromDate activateFormRefreshBtn" />
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="row">
                        <label class="col-sm-4">
                            To Date
                        </label>
                        <div class="col-sm-8">
                            <input type="date" id="txtToDate1" class="form-control fs-13 resetToDate activateFormRefreshBtn" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <input type="checkbox" id="cbFillFromToDates" checked /> <span>All Dates</span>
                            <input type="button" value="Last Month" class="formsGlobalUniqueBtn btnGetLastMonthDates" />
                            <input type="button" value="Last Week" class="formsGlobalUniqueBtn btnGetLastWeekDates" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                        <div class="row">
                            <label class="col-sm-4">
                                Person
                            </label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(x => x.setter, Model.setters, new { @class = "form-control resetSelectField activateFormRefreshBtn", @id = "ddlPerson" })

                            </div>
                        </div>
                    </div>
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4 text-right">
                    <input type="button" id="btnFormResultsSearch" value="Refresh" class="refresh_btn refreshBtnDefault" />
                </div>
            </div>
        </div>


    </div>

    <div class="mt-4 white-box pos-rel" id="divDataTableReport">

        <div class="row col-md-6 report_buttons">
            <div style="margin:3px;">
                <input type="button" value="PDF" table-id="dataTableForBagsGivenToPerson" table-count="1" class="formsGlobalUniqueBtn btnDataTableDownloadPDF" id="btnPDF" />
            </div>
            <div style="margin:3px;">
                <input type="button" value="Excel" table-id="dataTableForBagsGivenToPerson" table-count="1" class="formsGlobalUniqueBtn btnDataTableDownloadExcel" />
            </div>
            <div style="margin:3px;">
                <input type="button" id="btnDataTablePreview" table-sub-headings="List" class="formsGlobalUniqueBtn mx-2" table-id="dataTableForBagsGivenToPerson" table-count="1" value="Preview" />
            </div>
            <div style="margin:3px;">
                <input type="button" value="Print" table-id="dataTableForBagsGivenToPerson" id="jobGiventoPersonBtnDataTablePrint" class="formsGlobalUniqueBtn" table-count="1" report-format="portrait" />
            </div>
            <div style="margin:3px;display:none;">
                <input type="button" value="Email" table-id="dataTableForBagsGivenToPerson" class="formsGlobalUniqueBtn" />
            </div>

            <div style="margin:3px;display:none;">
                <input type="button" value="Simple Excel" class="formsGlobalUniqueBtn" />
            </div>
        </div>
        <div class="row dataTableReport">

            <table id="dataTableForBagsGivenToPerson" class="dataTable display nowrap table" style="width:100%">
                <thead>
                    <tr>
                        <th>JOB NO</th>
                        <th>DATE</th>
                        <th>TIME</th>
                        <th>RCV DATE</th>
                        <th>RCV TIME</th>
                        <th>QTY</th>
                        <th>PERSON</th>
                        <th>TRANSACT</th>
                        <th>STYLE</th>
                        <th>LOG NO</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>

            </table>
            <br>

        </div>
    </div>

</div>




<script type="text/javascript">

    var txtFromDate1 = "1990-01-01", txtToDate1 = "2099-12-31";

    function ClearControls() {
        txtFromDate1 = "1990-01-01"; txtToDate1 = "2099-12-31";
        $('#txtFromDate1').val('');
        $('#txtToDate1').val('');
        $('#ddlPerson').val('All').change();

        existAutoFilledData();
    }
    function existAutoFilledData() {
        if ($('#txtFromDate1').val() != "")
            fromdate1 = $('#txtFromDate1').val();
        else
            fromdate1 = "1990-01-01";

        if ($('#txtToDate1').val() != "")
            todate1 = $('#txtToDate1').val();
        else
            todate1 = "2099-12-31";

        if ($('#ddlPerson option:selected').val() != 'All')
            person = $('#ddlPerson option:selected').val();
        else
            person = "";


        BindBagsGivenToPerson(fromdate1, todate1, person);
    }

    function BindBagsGivenToPerson(fromdate1, todate1, person) {
        var url = '@Url.Action("GetListofJobsGiventoaPerson", "SalesShopControl", new { Area = "" })';

        var data = {
            settername: person,
            fromdate: fromdate1,
            todate: todate1,
            datecondition: '1'
        };


        var jqxhr = $.post(url, data, function () { })
        .done(function (response) {
            var json;
            if (response instanceof Object)
                json = response;

            else
                json = $.parseJSON(response);

            var table = $('#dataTableForBagsGivenToPerson').DataTable();
            table.clear().draw();


            $("#dataTableForBagsGivenToPerson tbody").empty();
            var trans = json;
            var totalPrice = 0;
            var tr;
            //alert(json);
            for (var i = 0; i < json.length; i++) {
                //totalPrice += parseFloat(json[i].PRICE);
                table.row.add([
                    json[i].JOB_NO,
                    json[i].DATE ? json[i].DATE.split('T')[0] : '',
                    json[i].TIME,
                    json[i].RCV_DATE ? json[i].RCV_DATE.split('T')[0] : '',
                    json[i].RCVD,
                    json[i].QTY,
                    json[i].PERSON,
                    json[i].TRANSACT,
                    json[i].STYLE,
                    json[i].LOG_NO
                ]);
            }

            table.draw();
            //addNumericColumnsClasstoDT("dataTableForBagsGivenToPerson", [1]);

            // TODO : Bind data to table
        })
        .fail(function (jqxhr, textStatus, error) {
            var err = textStatus + ", " + error;
            console.log("GETBagsGivenToPerson Request Failed: " + err);
        });
    }


    $(document).ready(function () {

        var table = $('#dataTableForBagsGivenToPerson').DataTable({
            dom: 'Blfrtip',
            searching: true,
            select: true,
            buttons: [],
            pageLength: 25,
            "aaSorting": []
        });
        fillFromToDates();

        $(document).on('click', '#jobGiventoPersonBtnDataTablePrint', function () {
            reportFormat = "";
            if ($(this).attr('report-format') !== undefined) {
                reportFormat = $(this).attr('report-format');
            }
            const tableid = $(this).attr("table-id");
            const tablesCount = $(this).attr("table-count");
            const tablesSubHeadings = $(this).attr("table-sub-headings");
            
            printDiv(tableid, tablesCount, tablesSubHeadings, "" , reportFormat);
        })

            
    
    });

</script>


