            pageLength: 25,
            bInfo: false
        });

        var table3 = $('#dataTableForSalesSummary-3').DataTable({
            dom: 'Blfrtip',
            searching: true,
            select: true,
            buttons: [],
            pageLength: 25,
            bInfo: false
        });

        fillFromToDates();

        $('#btnFormResultsSearch').click(function () {
            existAutoFilledData();
            $('#btnFormResultsSearch').removeClass('needToRefreshBtn').addClass('refreshBtnDefault');
            $('#btnFormResultsSearch').val("Refresh");
        });

        $('#txtFromDate').on("blur", function (e) {
            buttonStyleClassChange('btnFormResultsSearch');
        });
        $('#txtToDate').on("change", function (e) {
            buttonStyleClassChange('btnFormResultsSearch');
        });
        $('#partialSpec').on("click", function (e) {
            buttonStyleClassChange('btnFormResultsSearch');
        });
        $('#btnDateonly').on("click", function (e) {
            buttonStyleClassChange('btnFormResultsSearch');
        });
        $('#btnPickupdate').on("click", function (e) {
            buttonStyleClassChange('btnFormResultsSearch');
        });
        $('#resetFormValues').on("click", function (e) {
            $("#cbFillFromToDates").prop("checked", true);
            fillFromToDates();
            $("#partialSpec").prop("checked", false);
            $("#btnPickupdate").prop("checked", true);

            buttonStyleClassChange('btnFormResultsSearch');
        });
    });

