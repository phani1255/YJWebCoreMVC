<script type="text/javascript">

    var txtFromDate = "1990-01-01", txtToDate = "2099-12-31";
    function ClearControls() {
        txtFromDate = "1990-01-01"; txtToDate = "2099-12-31";
        $('#txtFromDate').val('');
        $('#txtToDate').val('');


        existAutoFilledData();
    }
    function existAutoFilledData() {

        if ($('#txtFromDate').val() != "")
            fromdate = $('#txtFromDate').val();
        else
            fromdate = "1990-01-01";

        if ($('#txtToDate').val() != "")
            todate = $('#txtToDate').val();
        else
            todate = "2099-12-31";

        let partialSpeckDate = $('#partialSpec').prop('checked') ? true : false;
        let bypicdate = false;
        let rdt = $("input[name='rdoDate']:checked").val();
        if (rdt == "rdoPickupdate") {
            bypicdate = true;
        }


        for (i = 1; i <= 3; i++) {
            BindAnnualPaymentsReceived(fromdate, todate, partialSpeckDate, bypicdate,i);
        }

    }

    function buttonStyleClassChange(btnId) {
        $('#' + btnId).removeClass('refreshBtnDefault').addClass('needToRefreshBtn');
        $('#' + btnId).val("Refresh *");
    }


    function BindAnnualPaymentsReceived(fromdate, todate,partialSpeckDate, bypicdate,dtId) {
        var url = '@Url.Action("getSalesSummaryDetails", "SalesSummary", new { Area = "" })';
            var data = {
                fDate: fromdate,
                tDate: todate,
                partialSpeckDate: partialSpeckDate,
                bypickdate: bypicdate,
                type: dtId
            };

            var jqxhr = $.post(url, data, function () { })
                .done(function (response) {
                    var json;
                    if (response instanceof Object)
                        json = response;
                    else
                        json = $.parseJSON(response);

                    var table = $('#dataTableForSalesSummary-' + dtId).DataTable();
                    table.clear().draw();

                    $("#dataTableForSalesSummary-"+dtId +" tbody").empty();
                    var avgsale = 0;
                    var totalSales = 0
                    var gst = 0;
                    var cogs = 0;
                    var GrossProfit = 0;
                    var Marginperc = 0;
                    var QTY = 0;
                    var AvgSales = 0;
                    var totalavgsale = 0;

                    for (var i = 0; i < json.length; i++) {
                        avgsale = parseFloat(json[i].TotalSales) / parseFloat(json[i].QTY);
                        totalSales += parseFloat(json[i].TotalSales);
                        gst += parseFloat(json[i].GST);
                        cogs += parseFloat(json[i].COGS);
                        GrossProfit += parseFloat(json[i].GrossProfit);
                        Marginperc += parseFloat(json[i].Marginperc);
                        QTY += parseFloat(json[i].QTY);
                        AvgSales += parseFloat(json[i].AvgSales);
                        totalavgsale += parseFloat(avgsale);


                        table.row.add([
                            json[i].Grouped,
                            formatCurrency(json[i].TotalSales),
                            formatCurrency(json[i].GST),
                            formatCurrency(json[i].COGS),
                            formatCurrency(json[i].GrossProfit),
                            formatCurrency(json[i].Marginperc),
                            formatCurrency(json[i].QTY),
                            formatCurrency(json[i].AvgSales),
                            formatCurrency(avgsale)
                        ]);

                    }
                    table.draw();
                    $('#tfooter-' + dtId).find('th').eq(0).html();
                    $('#tfooter-' + dtId).find('th').eq(1).html(formatCurrency(totalSales));
                    $('#tfooter-' + dtId).find('th').eq(2).html(formatCurrency(gst));
                    $('#tfooter-' + dtId).find('th').eq(3).html(formatCurrency(cogs));
                    $('#tfooter-' + dtId).find('th').eq(4).html(formatCurrency(GrossProfit));
                    $('#tfooter-' + dtId).find('th').eq(5).html(formatCurrency(Marginperc));
                    $('#tfooter-' + dtId).find('th').eq(6).html(formatCurrency(QTY));
                    $('#tfooter-' + dtId).find('th').eq(7).html(formatCurrency(AvgSales));
                    $('#tfooter-' + dtId).find('th').eq(8).html(formatCurrency(totalavgsale));



                    // TODO : Bind data to table
                })
                .fail(function (jqxhr, textStatus, error) {
                    var err = textStatus + ", " + error;
                    console.log("GETSoldOrInstock Request Failed: " + err);
                });
    }
    function formatCurrency(total) {
        var neg = false;
        if (total < 0) {
            neg = true;
            total = Math.abs(total);
        }
        return (neg ? "-" : '') + parseFloat(total, 10).toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, "$1,").toString();
    }

